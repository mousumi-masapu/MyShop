
@{
    Layout = null;
}
 @using MyShop.Core.Models;

    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Index</title>
    </head>
    <body>

        <h3>Products List</h3>
        <table cellpadding="2" cellspacing="2" border="1">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Image</th>
                <th>Price</th>
                <th>Buy</th>
            </tr>
            @foreach (Product product in ViewBag.products)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td><img src="~/Content/ProductImages/@product.Image" width="60" /> </td>
                    <td>@product.Price</td>
                    <td align="center">
                        <a href="@Url.Action("AddToCart", "Cart", new { id = product.Id })">Add To Cart</a>
                    </td>
                </tr>
            }
        </table>

    </body>
    </html>

